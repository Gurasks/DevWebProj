<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="bg-light">

  <%- include('../partials/navbar'); %>

    <div class="container text-center">
        <% for(let i=0; i<prop.length; i=i+3) {%>
          <div class="row">
              <% for(let j=i; j<i+3; j++) {%>
                <div class="col">
                  <a id="rent-<%= j %>" href="./rent?id=<%= prop[j].id %>">
                      <div class="cropped">
                          <img class="searching-img rounded-2" src=<%= prop[j].mainPhoto %>>
                      </div>
                      <div class="info-spacing">
                          <div class="location-rating">
                              <span class="location brand-black"><%= prop[j].location %></span>
                              <span class="rating"><%= prop[j].ratingAvg %> <i class="fa-solid fa-star"></i></span>
                          </div>
                          <span class="info brand-gray"><%= prop[j].reference %></span>
                          <span class="price brand-black">Di√°ria R$<%= prop[j].price %>,00</span>
                      </div>
                    </a>
                  </div>
              <% } %>
          </div>
      <% } %>
      <% if(maxPage > 1) {%>
      <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li id="prev" class="page-item page-link brand-white bg-dark d-none"><</li>
            <li id="next" class="page-item page-link brand-white bg-dark">></li>
          </ul>
        </nav>
      </div>
      <% } %>
    </div>


    <%- include('../partials/footer'); %>
    <script>
      const maxPage = <%- JSON.stringify(maxPage) %>
    </script>
    <script src="assets/js/pagination.js"></script>
</body>
</html>
